{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "outDir": "./dist",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "react-dom": ["../node_modules/@types/react-dom"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/**/*.ts",
    "src/**/**/*.tsx",
    "src/**/*.scss",
    "./index.d.ts"
  ]
}
